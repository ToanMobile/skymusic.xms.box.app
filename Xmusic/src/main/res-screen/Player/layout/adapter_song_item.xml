<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad10"
        android:id="@+id/rootSong"
        android:background="@drawable/bg_player_selector">

    <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/iconMusic"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:indicatorName="LineScalePulseOutRapidIndicator"
            android:visibility="invisible"/>

    <TextView
            android:id="@+id/txtPositionSong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.1"
            android:gravity="center"
            android:textColor="@color/text_player_selector"
            android:textSize="@dimen/text_normal"
            android:text=""
            android:fontFamily="@font/fontmain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/txtNameSong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.4"
            android:paddingStart="0dp"
            android:paddingEnd="20dp"
            android:textColor="@color/text_player_selector"
            android:textSize="@dimen/text_normal"
            android:maxLines="1"
            android:ellipsize="end"
            android:text=""
            android:fontFamily="@font/fontmain"
            app:layout_constraintStart_toEndOf="@+id/txtPositionSong"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/txtNameSinger"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.3"
            android:paddingStart="0dp"
            android:paddingEnd="20dp"
            android:ellipsize="end"
            android:textColor="@color/text_player_selector"
            android:textSize="@dimen/text_normal"
            android:maxLines="1"
            android:text=""
            android:fontFamily="@font/fontmain"
            app:layout_constraintStart_toEndOf="@+id/txtNameSong"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/txtDuration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.2"
            android:gravity="center"
            android:textColor="@color/text_player_selector"
            android:textSize="@dimen/text_normal"
            android:text=""
            android:fontFamily="@font/fontmain"
            app:layout_constraintStart_toEndOf="@+id/txtNameSinger"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

